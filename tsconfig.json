{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "skipLibCheck": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "lib": [
            "es6"
        ]
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
